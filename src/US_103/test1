import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import java.time.Duration;

public class LogoutTest {
    public static void main(String[] args) {
        // WebDriver'ı başlat
        System.setProperty("webdriver.chrome.driver", "path/to/chromedriver");
        WebDriver driver = new ChromeDriver();
        driver.manage().timeouts().implicitlyWait(Duration.ofSeconds(10));

        try {
            // 1. Akakce.com'u aç
            driver.get("https://www.akakce.com");

            // 2. "Giriş Yap" linkine tıkla
            WebElement girisYapLink = driver.findElement(https://www.akakce.com/akakcem/giris/?ru=%2Fakakcem%2F%3F%5Fgl%3D1%2A45nt62%2A%5Fup%2AMQ%2E%2E%2A%5Fgs%2AMQ%2E%2E%26gclid%3DCj0KCQjw1um%2DBhDtARIsABjU5x7ZvVj3K9Gkc3uVHLXck4aMT76d7i6fvgarM7jacmDEoj8ev2R8RWMaAmHyEALw%5FwcB&s=22);
            girisYapLink.click();

            // 3. Kullanıcı adı ve şifreyi gir, giriş yap
            WebElement usernameField = driver.findElement(By.id("id="life"")); // Kullanıcı adı input ID'si
            WebElement passwordField = driver.findElement(By.id(id="lifp" )); // Şifre input ID'si
            WebElement loginButton = driver.findElement(By.id("lfb")); // Giriş butonu ID'si

            usernameField.sendKeys("sibeloztemel31@gmail.com");
            passwordField.sendKeys("Sibel5742");
            loginButton.click();

            // 4. "Çıkış Yap" butonuna tıkla
            WebElement logoutButton = driver.findElement(By.linkText("Çıkış Yap"));
            logoutButton.click();

            // 5. Giriş yapma  sayfasına yönlendirildiğini doğrula
            if (driver.getCurrentUrl().contains("giris")) {
                System.out.println("Oturum başarıyla kapatıldı. Giriş sayfasına yönlendirildi.");
            } else {

            }

        } catch (Exception e) {
            e.printStackTrace();
        } finally {
            // Tarayıcı kapat
            driver.quit();
        }
    }
}
